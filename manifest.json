{
  "name": "BIP-Pay",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Extract Data from BitPay BIP-70 Invoices",
  "homepage_url": "https://github.com/krillionaire/BIP-Pay",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Extract Invoice Data",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "activeTab",
    "http://bitpay.com/i/*",
    "https://bitpay.com/i/*",
    "http://bitpay.com/invoice?id=*",
    "https://bitpay.com/invoice?id=*"
  ]
}